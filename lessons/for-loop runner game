    <p>Edit the loop to make the character reach the finish line!</p>

    <div class="game-container">
        <div class="track">
            <div id="runner" class="runner"></div>
        </div>
        
        <div class="editor-container">
            <h3>üìù Edit the Loop:</h3>
            <textarea id="codeEditor">
for (let i = 0; i < 5; i++) {  
    moveRight();  
}
            </textarea>
            <button class="btn" onclick="runCode()">Run Code</button>
        </div>
    </div>

    <script>
        function moveRight() {
            let runner = document.getElementById("runner");
            let currentPosition = parseInt(runner.style.left) || 10;
            runner.style.left = (currentPosition + 50) + "px";
        }

        function runCode() {
            let code = document.getElementById("codeEditor").value;
            document.getElementById("runner").style.left = "10px"; // Reset position

            try {
                eval(code); // Execute user input
            } catch (error) {
                alert("‚ùå Error in your code: " + error.message);
            }
        }
    </script>

